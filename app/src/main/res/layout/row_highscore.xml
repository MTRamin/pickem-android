<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/highscoreItem"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <View
        android:id="@+id/highscorePlayerIndicator"
        android:layout_width="10dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/highscoreRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/dummy_number" />

    <TextView
        android:id="@+id/highscoreUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/highscoreRank"
        android:text="@string/stats_username"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageArrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

    <TextView
        android:id="@+id/highscorePossible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/imageArrow"
        android:text="@string/na_number" />

    <TextView
        android:id="@+id/highscoreDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/highscorePossible"
        android:text="@string/divider" />

    <TextView
        android:id="@+id/highscoreScore"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:layout_toLeftOf="@id/highscoreDivider"
        android:gravity="right"
        android:text="@string/na_number" />

    <TextView
        android:id="@+id/highscorePercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/highscoreScore"
        android:text="@string/na_number" />

</RelativeLayout>